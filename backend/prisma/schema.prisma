generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(uuid())
  user     String   @unique
  password String
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("users")
}

model ProductLine {
  id       String    @id @default(uuid())
  name     String    @unique
  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
  Product  Product[]

  @@map("productLine")
}

model ColorLine {
  id       String    @id @default(uuid())
  name     String    @unique
  code     String
  createAt DateTime  @default(now())
  updateAt DateTime  @updatedAt
  Product  Product[]

  @@map("corLine")
}

model ProductCapacity {
  id       String   @id @default(uuid())
  Capacity String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  Product Product[]

  @@map("productCapacity")
}

model Category {
  id       String   @id @default(uuid())
  name     String   @unique
  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  Product Product[]

  @@map("category")
}

model Product {
  id          String @id @default(uuid())
  name        String @unique
  description String

  ProductLine   ProductLine? @relation(fields: [idProductLine], references: [id])
  idProductLine String

  Category   Category? @relation(fields: [idCategory], references: [id])
  idCategory String

  ColorLine   ColorLine? @relation(fields: [colorLineId], references: [id])
  colorLineId String?

  ProductCapacity   ProductCapacity? @relation(fields: [productCapacityId], references: [id])
  productCapacityId String?

  Dimensions    String
  Materials     String
  OtherFeatures String
  Weight        String
  Code          String
  NCM           String
  EAN           String
  Image         String

  createAt DateTime @default(now())
  updateAt DateTime @updatedAt

  @@map("products")
}
